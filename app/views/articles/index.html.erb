<div id='page-content' class='article-page'>
  <h1 class='text-center mt-4'>Listing all Articles</h1>
  <div class="container align-articles-section">
    <% @articles.each do |article| %>
      <div class='align-article-content'>
        <div class="card text-center">
          <div class="card-header font-italic">
            by Ankit Agarwal
          </div>
          <div class="card-body">
            <h5 class="card-title"><%= link_to article.title, article_path(article), class: 'text-success' %></h5>
            <p class="card-text"><%= truncate(article.description, length: 100) %></p>
            <%= link_to 'View', article_path(article), class: 'btn btn-outline-success btn-lg' %>
            <%= link_to 'Edit', edit_article_path(article), class: 'btn btn-outline-info btn-lg' %>
            <%= link_to 'Destroy', article_path(article), method: :delete, data: {confirm: 'Are you sure?'}, class: 'btn btn-outline-danger btn-lg' %>
          </div>
          <div class="card-footer text-muted">
            <small> Created <%= time_ago_in_words(article.created_at) %> ago,
            edited <%= time_ago_in_words(article.updated_at) %> ago</small>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <br>
  <%= link_to 'Create', new_article_path %>
</div>
